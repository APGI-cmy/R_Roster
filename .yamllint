# Yamllint configuration for agent contract files with YAML frontmatter
# BL-028: Warnings ARE errors - all issues must be fixed
---
extends: default

rules:
  line-length:
    max: 120
    level: error
  trailing-spaces:
    level: error
  document-start: disable  # Agent contracts use --- for frontmatter
  document-end: disable    # Agent contracts don't require ...
  comments:
    min-spaces-from-content: 1
  colons:
    max-spaces-before: 0
    max-spaces-after: 1

ignore: |
  # Ignore lines after YAML frontmatter closing in agent contract files
  # Yamllint cannot properly parse YAML frontmatter + markdown format
